---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
	title?: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>

		{
			title ? (
				<title>{title} | Steve Thorne</title>
			) : (
				<title>Steve Thorne</title>
			)
		}

		<meta name="description" content="Senior Programmer at Writable, Inc." />
		<meta
			name="keywords"
			content="steven thorne, steve thorne, steve, steven, thorne, software, full-stack, developer, writable, dev, full stack, full, stack, sthorne"
		/>

		<meta property="og:site_name" content="Steve Thorne" />
		<meta
			property="og:description"
			content="Senior Programmer at Writable, Inc."
		/>
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Home" />
		<meta
			property="og:image"
			content="/img/3374032.jpg"
		/>
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:width" content="256" />
		<meta property="og:image:height" content="256" />
		<meta property="og:image:alt" content="Steve Thorne" />
		<meta property="theme-color" content="#ff6500" />

		<meta name="generator" content={Astro.generator} />

		<!-- prevent favicon request -->
		<link rel="icon" href="data:," />

		<link rel="preload" href="/font/roboto-v30-latin-regular.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/font/roboto-v30-latin-700.woff2" as="font" type="font/woff2" crossorigin />
		<link rel="preload" href="/font/open-sans-v34-latin-regular.woff2" as="font" type="font/woff2" crossorigin />

		<link href="https://www.sthorne.dev/" rel="canonical" />

		<!-- Cloudflare Web Analytics -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "33917d0699464d34ba33606d9550c179"}'></script>
    <!-- End Cloudflare Web Analytics -->
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<style>
			:root {
				line-height: 1.5;
			}

			body {
				display: flex;
				flex-direction: column;
				align-items: center;
				min-height: 100vh;
				background-color: rgba(26, 32, 44, 1);
				color: #fff;
				font-family: "Body", Tahoma, sans-serif;
				margin: 0;
				line-height: inherit;
			}

			main {
				flex: 1 1 auto;
				padding: 2rem 0;
				margin: 0 1.5rem;
				font-size: 1.125rem;
				max-width: 56rem;
			}

			:global(@font-face) {
				font-family: 'Display';
				font-style: normal;
				font-weight: 400;
				font-display: swap;
				src: local(''),
						 url('/font/roboto-v30-latin-regular.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
						 url('/font/roboto-v30-latin-regular.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
			}

			:global(@font-face) {
				font-family: 'Display';
				font-style: normal;
				font-weight: 700;
				font-display: swap;
				src: local(''),
						 url('/font/roboto-v30-latin-700.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
						 url('/font/roboto-v30-latin-700.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
			}

			:global(@font-face) {
				font-family: 'Body';
				font-style: normal;
				font-weight: 400;
				font-display: swap;
				src: local(''),
						 url('/font/open-sans-v34-latin-regular.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
						 url('/font/open-sans-v34-latin-regular.woff') format('woff'); /* Chrome 6+, Firefox 3.6+, IE 9+, Safari 5.1+ */
			}

			:global(*, ::after, ::before) {
				box-sizing: border-box;
			}

			:global(p, h1, h2, h3, h4, h5, h6, ul, ol) {
				margin: 0;
			}

			:global(h1, h2, h3, h4, h5, h6) {
				font-size: inherit;
				font-weight: inherit;
			}

			:global(a) {
				color: inherit;
				text-decoration: inherit;
			}

			:global(svg) {
				vertical-align: middle;
			}

			@media (min-width: 768px) {
				main {
					margin: 0 4rem;
				}
			}

			@media (min-width: 1024px) {
				main {
					padding: 3rem 0;
					margin: 0 6rem;
				}
			}
		</style>
	</body>
</html>
