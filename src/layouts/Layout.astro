---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

export interface Props {
	title?: string;
}

const { title } = Astro.props as Props;
const cssUrl =
	"https://fonts.googleapis.com/css2?family=Open+Sans:wght@400&family=Roboto:wght@400;700&text=ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz6%26&display=swap";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1, shrink-to-fit=no"
		/>

		{
			title ? (
				<title>{title} | Steve Thorne</title>
			) : (
				<title>Steve Thorne</title>
			)
		}

		<meta name="description" content="Senior Programmer at Writable, Inc." />
		<meta
			name="keywords"
			content="steven thorne, steve thorne, software, full-stack, developer, writable"
		/>

		<meta property="og:site_name" content="Steve Thorne" />
		<meta
			property="og:description"
			content="Senior Programmer at Writable, Inc."
		/>
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Home" />
		<meta
			property="og:image"
			content="https://avatars0.githubusercontent.com/u/3374032?v=4"
		/>
		<meta property="og:image:type" content="image/jpeg" />
		<meta property="og:image:width" content="460" />
		<meta property="og:image:height" content="460" />
		<meta property="og:image:alt" content="Steve Thorne" />
		<meta property="theme-color" content="#ff6500" />

		<meta name="generator" content={Astro.generator} />

		<link rel="preconnect" href="https://fonts.gstatic.com/" />
		<link rel="preload" as="style" href={cssUrl} />
		<link rel="stylesheet" href={cssUrl} media="all" onload="this.media='all'"
		/>
		<noscript>
			<link rel="stylesheet" href={cssUrl} />
		</noscript>

		<!-- prevent favicon request -->
		<link rel="icon" href="data:," />

		<link href="https://www.sthorne.dev/" rel="canonical" />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<style>
			:root {
				line-height: 1.5;
			}

			body {
				display: flex;
				flex-direction: column;
				align-items: center;
				min-height: 100vh;
				background-color: rgba(26, 32, 44, 1);
				color: #fff;
				font-family: Open Sans, sans-serif;
				margin: 0;
				line-height: inherit;
			}

			main {
				flex: 1 1 auto;
				padding: 2rem 0;
				margin: 0 1.5rem;
				font-size: 1.125rem;
				max-width: 56rem;
			}

			:global(*, ::after, ::before) {
				box-sizing: border-box;
			}

			:global(p, h1, h2, h3, h4, h5, h6, ul, ol) {
				margin: 0;
			}

			:global(h1, h2, h3, h4, h5, h6) {
				font-size: inherit;
				font-weight: inherit;
			}

			:global(a) {
				color: inherit;
				text-decoration: inherit;
			}

			:global(svg) {
				vertical-align: middle;
			}

			@media (min-width: 768px) {
				main {
					margin: 0 4rem;
				}
			}

			@media (min-width: 1024px) {
				main {
					padding: 3rem 0;
					margin: 0 6rem;
				}
			}
		</style>
	</body>
</html>
